# baseURI: https://github.com/ComputingPlace/topotime/onto/#

@prefix ecrm:    <http://erlangen-crm.org/110404/> .
@prefix pl:    	<http://erlangen-crm.org/110404/> .
@prefix geo:     <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#> .
@prefix xml:     <http://www.w3.org/XML/1998/namespace> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .


:PeriodCollection	a						ecrm:E31_Document	;
				:hasLabel					rdf:Literal			;
				:hasName						:PeriodName			;
				:hasProjection				:Projection			;
				:hasAuthor					:Actor				;
				:revDate						:Date					.
				

:Period		owl:equivalentClass			ecrm:E4_Period	;
				owl:sameAs						<uri>				;
				:hasLabel						rdf:Literal		;
				:identifiedBy					rdf:Literal		;		// unique id in collection
				:identifiedBy					:PeriodName		;
				:hasTimespan					:Timespan		;
				:hasType							:PeriodType		;		// oneOf [Event, HistoricalPeriod, Lifespan, ...]
				:tookPlaceAt					:Place			;		// not Pelagios wants Places as annotations
				:hasPart							:Period			;
				:documentedIn					:Document		.
				
				
:Timespan	owl:equivalentClass			ecrm:E52_Timespan	;
				:hadStart						:TimePrimitive		;	// ISO-8601 or Julian Date
				:hadLatestStart				:TimePrimitive		;
				:hadEarliestEnd				:TimePrimitive		;
				:hadEnd							:TimePrimitive		;
				:hadDuration					:Dimension			.	// unit oneOf [d,w,m,y]; value [number]
	** note this does double-duty for us; if flagged "during" duration floats within s/ls/ee/e bounds
	
	
:Place		owl:equivalentClass			??					;		// not CIDOC!
				owl:sameAs						<uri>				;
				:hasLocation					rdf:Literal		;		// GeoJSON, WKT
				:hasName							rdf:Literal		;
				
				
:Actor		